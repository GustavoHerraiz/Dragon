{
  "name": "proyecto-dragon",
  "version": "1.0.0",
  "description": "Sistema de Autenticación de Imágenes IA - Proyecto Dragon",
  "main": "server.js",
  "type": "module",
  "private": true,
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    "start": "node server.js",
    "dev": "NODE_ENV=development nodemon server.js",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "lint": "eslint .",
    "metrics": "prometheus-api-metrics",
    "performance": "autocannon http://localhost:3000/analyze"
  },
  "dependencies": {
    "sharp": "^0.33.0",
    "winston": "^3.11.0",
    "exifr": "^7.1.3",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "fft-js": "^0.0.12",
    "jimp": "^1.6.0",
    "opencv4nodejs-prebuilt": "^5.3.0",
    "prometheus-client": "^0.5.0",
    "redis": "^4.6.11",
    "mongodb": "^6.3.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.11",
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "autocannon": "^7.12.0",
    "eslint": "^8.54.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-jest": "^27.6.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.1",
    "prettier": "^3.1.0",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "typescript": "^5.3.2"
  },
  "eslintConfig": {
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended",
      "plugin:jest/recommended",
      "prettier"
    ],
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint",
      "jest"
    ],
    "root": true
  },
  "nodemonConfig": {
    "watch": [
      "backend"
    ],
    "ext": "js,json,ts",
    "ignore": [
      "backend/**/*.test.js",
      "backend/**/*.spec.ts",
      "backend/coverage"
    ]
  }
}
